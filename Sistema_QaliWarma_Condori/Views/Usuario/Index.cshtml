<table id="DatatableP" class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>APELLIDOS Y NOMBRES</th>
            <th>EMAIL</th>
            <th>CLAVE</th>
            <th>ESTADO</th>
            <th>ACCIONES</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@(m.usuario_id)</td>
                <td>@(m.apellidos) , @(m.nombre)</td>
                <td>@(m.email)</td>
                <td>@(m.clave)</td>
                <td>@(m.estado.Equals("A") ? "Activo":"Inactivo")</td>

                <td style="align-content:center; ">
                    <a href="~/Usuario/Visualizar/@m.usuario_id" class="btn btn-warning">DETALLE</a>
                    <a href="~/Usuario/AgregarEditar/@m.usuario_id" class="btn btn-primary">MODIFICAR</a>
                    <a href="~/Usuario/Eliminar/@m.usuario_id" class="btn btn-danger" onclick="return confirm('¿Estas seguro de eliminar elemento?'); ">ELIMINAR</a>

                </td>
            </tr>
        }
    </tbody>
</table>
